---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PostCard from "../../components/PostCard.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="Blog" description="News, notes, and updates.">
  <section class="page-container section-space">
    <h1 class="mb-6 text-3xl font-semibold md:text-5xl">Blog</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 animate-target opacity-0 transition-all duration-700">
      {sortedPosts.map((post) => (
        <PostCard post={post} />
      ))}
    </div>
  </section>
</BaseLayout>
