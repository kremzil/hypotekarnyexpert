<button
          type="button"
          class="fixed bottom-6 right-6 z-40 inline-flex h-11 w-11 items-center justify-center rounded-full bg-accent text-ink shadow-lg opacity-0 pointer-events-none transition-all duration-300 hover:bg-accent/90 cursor-pointer"
          aria-label="Scroll to top"
          data-scroll-top
        >
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" class="h-5 w-5">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
          </svg>
        </button>
        <script>
          const scrollButton = document.querySelector("[data-scroll-top]");
          const showClasses = ["opacity-100", "pointer-events-auto", "-translate-y-1"];
          const hideClasses = ["opacity-0", "pointer-events-none", "translate-y-0"];

          const updateVisibility = () => {
            if (!scrollButton) return;
            if (window.scrollY > 300) {
              scrollButton.classList.remove(...hideClasses);
              scrollButton.classList.add(...showClasses);
              return;
            }
            scrollButton.classList.remove(...showClasses);
            scrollButton.classList.add(...hideClasses);
          };

          scrollButton?.addEventListener("click", () => {
            window.scrollTo({ top: 0, behavior: "smooth" });
          });

          window.addEventListener("scroll", updateVisibility, { passive: true });
          updateVisibility();
        </script>