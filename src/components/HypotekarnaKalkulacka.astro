<div class="mt-10 grid gap-10 lg:grid-cols-12">
    <form id="kalkulacka"  class="rounded-2xl bg-neutral-50 p-6 space-y-6 lg:col-span-7 shadow-sm">
        <label class="grid  gap-2 text-sm text-dark">
            Výška hypotéky
            <input
                id="vyska"
                type="number"
                inputmode="decimal"
                min="0"
                step="0.1"
                value="40000"
                class="w-full rounded-md px-4 py-2 border-neutral-700  bg-ink text-dark shadow-sm focus:border-paper"
            />
        </label>
        <label class="grid  gap-2 text-sm text-dark">
            Akontácia
            <input
                id="akontacia"
                type="number"
                inputmode="decimal"
                min="0"
                step="0.1"
                value="0"
                class="w-full rounded-md px-4 py-2 border-neutral-700  bg-ink text-dark shadow-sm focus:border-paper"
            />
        </label>
                <label class="grid  gap-2 text-sm text-dark">
            Dĺžka úveru (v rokoch)
            <input
                id="dlzka"
                type="number"
                inputmode="decimal"
                min="0"
                step="0.1"
                value="10"
                class="w-full rounded-md px-4 py-2 border-neutral-700  bg-ink text-dark shadow-sm focus:border-paper"
            />
        </label>
                <label class="grid  gap-2 text-sm text-dark">
            Úroková sadzba (ročne)
            <input
                id="rate"
                type="number"
                inputmode="decimal"
                min="0"
                step="0.1"
                value="2"
                class="w-full rounded-md px-4 py-2 border-neutral-700  bg-ink text-dark shadow-sm focus:border-paper"
            />
        </label>
    </form>
          <div class="lg:col-span-5">
        <div class="rounded-2xl bg-neutral-50 p-6 shadow-sm">
          <h3 class="text-dark  border-paper-alt border-dotted border-b-2">Výsledok</h3>
          <div class="mt-6 space-y-4">
            <div class="flex items-center justify-between gap-4">
              <span class="text-sm font-bold text-dark">Mesačná splátka</span>
              <output id="future-value" class="text-lg font-medium text-dark">€0.00</output>
            </div>
            <div class="flex items-center justify-between gap-4">
              <span class="text-sm text-dark">Preplatená suma</span>
              <output id="total-contribution" class="text-lg font-medium text-dark">€0.00</output>
            </div>
            <div class="flex items-center justify-between gap-4">
              <span class="text-sm text-dark">Celková suma zaplatená</span>
              <output id="interest-earned" class="text-lg font-medium text-dark">€0.00</output>
            </div>
          </div>
        </div>
      </div>
</div>